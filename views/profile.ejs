<html>
	<head>
		<%- include partials/globalHead.ejs %>
		<link rel="stylesheet" href="css/style.css">
	</head>
	<body class="no-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header">
					
					<%- include partials/header.ejs %>

				</section>

			<!-- Main -->
				<section id="main">
					<div class="container">

						<!-- Content -->
							<article class="box post">
								<header>
									<h2><%= user.username %>'s Profile</h2>
								</header>
								<section>
									<h3>Favorite Stations: </h3>
									<ul>
										<% for(let i = 0; i < user.favoriteStations.length; i++) { %>
											<li class="stationListing">
												<span>Station: </span>
												<a href="/map?station=<%=user.favoriteStations[i].stationName%>"><span class="stationName"><%= user.favoriteStations[i].stationName %></span></a>
												<% if(user.favoriteStations[i].hasAlert) { %>
													<span>‚ö†Ô∏è</span>
												<% } %>
												<span class="trashButton">üóëÔ∏è</span>
											</li>
										<% } %>
									</ul>
									<form action="/addFavoriteStation" method="post">
										<label for="newFavoriteStationInput">Add Favorite Station: </label>
										<input id="newFavoriteStationInput" type="text" name="stationName">
										<button type="submit">Add Station</button>
									</form>
								</section>
							</article>

					</div>
				</section>

			<!-- Footer -->
				<%- include partials/footer.ejs %>

		</div>

		<!-- Scripts -->
			<script src="js/script.js"></script>
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/jquery.dropotron.min.js"></script>
			<script src="assets/js/browser.min.js"></script>
			<script src="assets/js/breakpoints.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>